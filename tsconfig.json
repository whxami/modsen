{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": [
    "src",
    "global.d.ts"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@pages/*": ["./src/pages/*"],
      "@assets/*": ["./src/assets/*"],
      "@styles/*": ["./src/shared/styles/*"],
      "@constants/*": ["./src/constants/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true
  },
}
